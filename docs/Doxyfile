# Doxygen configuration for this repository.
# Generate docs with: doxygen docs/Doxyfile

DOXYFILE_ENCODING      = UTF-8

PROJECT_NAME           = "Medical Image Vault"
PROJECT_BRIEF          = "Streamlit app for uploading and searching medical images"

# The version can be overridden by environment variable during generation if desired.
# (Doxygen itself doesn't expand env vars everywhere reliably, so we keep this simple.)
PROJECT_NUMBER         = ""

OUTPUT_DIRECTORY       = build/docs
CREATE_SUBDIRS         = NO

GENERATE_HTML          = YES
HTML_OUTPUT            = html
GENERATE_LATEX         = NO

# Show a helpful landing page.
MARKDOWN_SUPPORT       = YES
USE_MDFILE_AS_MAINPAGE = docs/mainpage.md

# Input: document the app + core library.
INPUT                  = \
                         README.md \
                         main.py \
                         app \
                         pages \
                         docs

RECURSIVE              = YES
FILE_PATTERNS          = *.py *.md *.dox

# Doxygen needs help to treat .py files as Python.
EXTENSION_MAPPING      = py=Python

# Doxygen's Python support reads docstrings.
# Available values (depending on Doxygen version): NO / YES / MULTILINE
PYTHON_DOCSTRING       = YES

EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = YES

# Graphs (optional but nice). If `dot` isn't installed, Doxygen will just skip.
HAVE_DOT               = YES
DOT_IMAGE_FORMAT       = svg
CALL_GRAPH             = NO
CALLER_GRAPH           = NO

# Keep output tidy.
QUIET                  = YES
WARN_IF_UNDOCUMENTED   = NO
WARN_IF_DOC_ERROR      = YES

# Streamlit pages have top-level code. Still include them.
MACRO_EXPANSION        = NO
